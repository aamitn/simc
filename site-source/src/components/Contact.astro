<style>
  /* Custom Modal Styles */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    visibility: hidden;
    opacity: 0;
    transition: visibility 0s, opacity 0.3s ease;
  }

  .modal-overlay.show {
    visibility: visible;
    opacity: 1;
  }

  .modal-content {
    background-color: #1a202c; /* Tailwind's gray-900 / dark-bg equivalent */
    color: #cbd5e0; /* Tailwind's slate-300 equivalent */
    padding: 2rem;
    border-radius: 0.75rem; /* rounded-lg */
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    max-width: 90%;
    width: 400px;
    text-align: center;
    position: relative;
    border: 1px solid rgba(255, 255, 255, 0.1); /* border-white/10 */
  }

  .modal-close-button {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    background: none;
    border: none;
    color: #cbd5e0;
    font-size: 1.5rem;
    cursor: pointer;
    line-height: 1;
    padding: 0.25rem;
    border-radius: 0.25rem;
  }

  .modal-close-button:hover {
    color: #e2e8f0;
  }

  .modal-message {
    margin-bottom: 1rem;
    font-size: 1.125rem; /* text-lg */
  }

  .modal-button {
    background-image: linear-gradient(to right, #007bff, #8a2be2); /* circuit-blue to circuit-purple */
    color: white;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 0.5rem; /* rounded-md */
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .modal-button:hover {
    box-shadow: 0 4px 6px -1px rgba(0, 123, 255, 0.1), 0 2px 4px -1px rgba(0, 123, 255, 0.06);
  }
</style>

