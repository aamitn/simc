    </div>
    
    <!-- Newsletter Signup -->
    <div class="bg-gradient-to-r from-circuit-blue/10 to-circuit-purple/10 rounded-2xl p-8 mb-12" id="newsletter">
      <div class="max-w-2xl mx-auto text-center">
        <h3 class="text-2xl font-bold text-white mb-4">Stay Updated</h3>
        <p class="text-text-secondary mb-6">
          Get the latest updates on new features, tutorials, and industry insights delivered to your inbox.
        </p>
        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input 
            type="email" 
            placeholder="Enter your email address"
            class="flex-1 px-4 py-3 bg-dark-bg border border-white/20 rounded-lg text-white placeholder-text-secondary focus:outline-none focus:border-circuit-blue"
            required
          >
          <button 
            type="submit"
            class="px-6 py-3 bg-gradient-to-r from-circuit-blue to-circuit-purple text-white font-semibold rounded-lg hover:shadow-lg hover:shadow-circuit-blue/25 transition-all duration-300"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
    
    <!-- Bottom Footer -->
    <div class="border-t border-white/10 pt-8">
      <div class="flex flex-col md:flex-row items-center justify-between">
        <div class="flex items-center space-x-6 mb-4 md:mb-0">
          <p class="text-text-secondary text-sm">
