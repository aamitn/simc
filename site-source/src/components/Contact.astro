<script is:inline>
  // Get references to the form and modal elements
  const newsletterForm = document.getElementById("newsletter-form");
  const messageModal = document.getElementById("message-modal");
  const modalMessageText = document.getElementById("modal-message-text");
  const modalCloseButton = document.getElementById("modal-close-button");
  const modalOkButton = document.getElementById("modal-ok-button");

  /**
   * Displays a message in the custom modal.
   * @param {string} message - The message to display.
   */
  function showMessageModal(message) {
    modalMessageText.innerHTML = message;
    messageModal.classList.add("show");
  }

  /**
   * Hides the custom modal.
   */
  function hideMessageModal() {
    messageModal.classList.remove("show");
  }

  // Add event listeners for closing the modal
  // Ensure elements exist before adding listeners to avoid errors
  if (modalCloseButton) {
    modalCloseButton.addEventListener("click", hideMessageModal);
  }
  if (modalOkButton) {
    modalOkButton.addEventListener("click", hideMessageModal);
  }
  // Close modal if overlay is clicked
  if (messageModal) {
    messageModal.addEventListener("click", (e) => {
      if (e.target === messageModal) {
        hideMessageModal();
      }
    });
  }

  /**
   * Handles the form submission event.
   * @param {Event} event - The submit event object.
   */
  async function handleSubmit(event) {
    // Prevent default form submission to stop the browser from navigating away
    event.preventDefault();
    const data = new FormData(event.target); // Create FormData object from the form

    try {
      // Send the form data to Formspree
      const response = await fetch(event.target.action, {
        method: newsletterForm.method, // Use the form's defined method (POST)
        body: data, // The collected form data
        headers: {
          'Accept': 'application/json' // Request JSON response from Formspree
        }
      });

      // Check if the response was successful
      if (response.ok) {
        showMessageModal("Thanks for subscribing!"); // Show success message in modal
        newsletterForm.reset(); // Clear the form fields
      } else {
        // If response is not OK, parse the error details
        const responseData = await response.json();
        if (Object.hasOwn(responseData, 'errors')) {
          // Display specific error messages from Formspree
          showMessageModal(responseData["errors"].map(error => error["message"]).join(", "));
        } else {
          // Display a generic error message
          showMessageModal("Oops! There was a problem submitting your form.");
        }
      }
    } catch (error) {
      // Catch any network or fetch-related errors
      showMessageModal("Oops! There was a problem submitting your form.");
      console.error("Form submission error:", error); // Log error for debugging
    }
  }

  // Attach the submit event listener to the form
  // Ensure the form element exists before attaching the listener
  if (newsletterForm) {
    newsletterForm.addEventListener("submit", handleSubmit);
  }
</script>

