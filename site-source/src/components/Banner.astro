<section class="py-16 bg-gradient-to-r from-circuit-blue/10 via-circuit-purple/10 to-circuit-green/10 relative overflow-hidden" id="banner-section">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-circuit-pattern opacity-5"></div>
  
  <div class="container mx-auto px-6 relative z-10">
    <!-- Trusted By Section -->
    <div class="text-center mb-12" id="banner-header">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white dark:text-white text-text-primary-light">
        Trusted by Industry Leaders
      </h2>
      <p class="text-xl text-text-secondary dark:text-text-secondary text-text-secondary-light max-w-2xl mx-auto">
        Join thousands of engineers and companies who rely on our platform for their circuit design needs.
      </p>
    </div>
    
    <!-- Company Logos Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8 items-center mb-16" id="company-logos">
      <!-- Logo placeholders with company names -->
      <div class="company-logo flex flex-col items-center p-6 bg-dark-bg/50 rounded-lg border border-white/10 hover:border-circuit-blue/30 transition-all duration-300">
        <div class="w-12 h-12 bg-gradient-to-br from-circuit-blue to-circuit-purple rounded-lg flex items-center justify-center mb-3">
          <i data-feather="cpu" class="w-6 h-6 text-white"></i>
        </div>
        <span class="text-sm text-text-secondary font-medium">TechCorp</span>
      </div>
      
      <div class="company-logo flex flex-col items-center p-6 bg-dark-bg/50 rounded-lg border border-white/10 hover:border-circuit-purple/30 transition-all duration-300">
        <div class="w-12 h-12 bg-gradient-to-br from-circuit-purple to-circuit-green rounded-lg flex items-center justify-center mb-3">
          <i data-feather="zap" class="w-6 h-6 text-white"></i>
        </div>
        <span class="text-sm text-text-secondary font-medium">ElectroLab</span>
      </div>
      
      <div class="company-logo flex flex-col items-center p-6 bg-dark-bg/50 rounded-lg border border-white/10 hover:border-circuit-green/30 transition-all duration-300">
        <div class="w-12 h-12 bg-gradient-to-br from-circuit-green to-circuit-blue rounded-lg flex items-center justify-center mb-3">
          <i data-feather="activity" class="w-6 h-6 text-white"></i>
        </div>
        <span class="text-sm text-text-secondary font-medium">CircuitPro</span>
      </div>
      
      <div class="company-logo flex flex-col items-center p-6 bg-dark-bg/50 rounded-lg border border-white/10 hover:border-circuit-blue/30 transition-all duration-300">
        <div class="w-12 h-12 bg-gradient-to-br from-circuit-blue to-circuit-purple rounded-lg flex items-center justify-center mb-3">
          <i data-feather="layers" class="w-6 h-6 text-white"></i>
        </div>
        <span class="text-sm text-text-secondary font-medium">NanoTech</span>
      </div>
      
      <div class="company-logo flex flex-col items-center p-6 bg-dark-bg/50 rounded-lg border border-white/10 hover:border-circuit-purple/30 transition-all duration-300">
        <div class="w-12 h-12 bg-gradient-to-br from-circuit-purple to-circuit-green rounded-lg flex items-center justify-center mb-3">
          <i data-feather="settings" class="w-6 h-6 text-white"></i>
        </div>
        <span class="text-sm text-text-secondary font-medium">AutoDesign</span>
      </div>
      
      <div class="company-logo flex flex-col items-center p-6 bg-dark-bg/50 rounded-lg border border-white/10 hover:border-circuit-green/30 transition-all duration-300">
        <div class="w-12 h-12 bg-gradient-to-br from-circuit-green to-circuit-blue rounded-lg flex items-center justify-center mb-3">
          <i data-feather="monitor" class="w-6 h-6 text-white"></i>
        </div>
        <span class="text-sm text-text-secondary font-medium">SimuLabs</span>
      </div>
    </div>
    
    <!-- Testimonials -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="testimonials">
      <!-- Testimonial 1 -->
      <div class="testimonial-card bg-dark-bg border border-white/10 rounded-xl p-8 hover:border-circuit-blue/30 transition-all duration-300">
        <div class="flex items-center mb-4">
          <div class="flex text-circuit-blue">
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
          </div>
        </div>
        <p class="text-text-secondary mb-6 leading-relaxed">
          "CircuitSim has revolutionized our design process. The simulation accuracy and speed are unmatched."
        </p>
        <div class="flex items-center">
          <div class="w-12 h-12 bg-gradient-to-br from-circuit-blue to-circuit-purple rounded-full flex items-center justify-center mr-4">
            <span class="text-white font-bold">JD</span>
          </div>
          <div>
            <div class="font-semibold text-white">John Davidson</div>
            <div class="text-sm text-text-secondary">Senior Engineer, TechCorp</div>
          </div>
        </div>
      </div>
      
      <!-- Testimonial 2 -->
      <div class="testimonial-card bg-dark-bg border border-white/10 rounded-xl p-8 hover:border-circuit-purple/30 transition-all duration-300">
        <div class="flex items-center mb-4">
          <div class="flex text-circuit-purple">
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
          </div>
        </div>
        <p class="text-text-secondary mb-6 leading-relaxed">
          "The collaboration features and component library have improved our team productivity by 300%."
        </p>
        <div class="flex items-center">
          <div class="w-12 h-12 bg-gradient-to-br from-circuit-purple to-circuit-green rounded-full flex items-center justify-center mr-4">
            <span class="text-white font-bold">SM</span>
          </div>
          <div>
            <div class="font-semibold text-white">Sarah Martinez</div>
            <div class="text-sm text-text-secondary">Lead Designer, ElectroLab</div>
          </div>
        </div>
      </div>
      
      <!-- Testimonial 3 -->
      <div class="testimonial-card bg-dark-bg border border-white/10 rounded-xl p-8 hover:border-circuit-green/30 transition-all duration-300">
        <div class="flex items-center mb-4">
          <div class="flex text-circuit-green">
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
            <i data-feather="star" class="w-5 h-5 fill-current"></i>
          </div>
        </div>
        <p class="text-text-secondary mb-6 leading-relaxed">
          "Incredible platform! The real-time analysis and GPU acceleration make complex simulations effortless."
        </p>
        <div class="flex items-center">
          <div class="w-12 h-12 bg-gradient-to-br from-circuit-green to-circuit-blue rounded-full flex items-center justify-center mr-4">
            <span class="text-white font-bold">MR</span>
          </div>
          <div>
            <div class="font-semibold text-white">Michael Roberts</div>
            <div class="text-sm text-text-secondary">CTO, CircuitPro</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- CTA Banner -->
    <div class="mt-16 text-center bg-gradient-to-r from-circuit-blue/20 to-circuit-purple/20 rounded-2xl p-12 border border-white/10" id="cta-banner">
      <h3 class="text-3xl font-bold mb-4 text-white">Ready to Transform Your Circuit Design?</h3>
      <p class="text-xl text-text-secondary mb-8 max-w-2xl mx-auto">
        Join the thousands of engineers who have already made the switch to our revolutionary platform.
      </p>
      <button class="px-8 py-4 bg-gradient-to-r from-circuit-blue to-circuit-purple text-white font-semibold rounded-lg text-lg hover:shadow-xl hover:shadow-circuit-blue/30 transition-all duration-300 transform hover:scale-105">
        <span class="flex items-center justify-center">
          <i data-feather="rocket" class="w-5 h-5 mr-2"></i>
          Start Free Trial
        </span>
      </button>
    </div>
  </div>
</section>
