---
export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
}

const { 
  title, 
  description = "SimC : Circuit simulation software for engineers and designers",
  image = "/ogbanner.png", // Default OG image
  type = "website"
} = Astro.props;

// Base URL - replace with your actual domain in production

const baseUrl = import.meta.env.PROD ? 'https://simc.bitmutex.com' : 'http://localhost:5000';
const canonicalURL = new URL(Astro.url.pathname, baseUrl);
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="./favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="./favicon.svg" />
    <link rel="shortcut icon" href="./favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="./apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="SimC" />
    <link rel="manifest" href="./site.webmanifest" />

    <!-- Primary Meta Tags -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://gitlab.com/aamitn/assets/-/raw/18be64c53100ac43e13ec31d6a60f902cb5264ff/images/ogbanner_simc.png" />
    <meta property="og:site_name" content="SimC" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://gitlab.com/aamitn/assets/-/raw/18be64c53100ac43e13ec31d6a60f902cb5264ff/images/ogbanner_simc.png" />
    
    <!-- Additional SEO Tags -->
    <meta name="robots" content="index,follow" />
    <meta name="googlebot" content="index,follow" />
    <meta name="application-name" content="SimC" />
    <meta name="keywords" content="circuit simulation, electronic design, spice simulator, circuit analysis, electronic engineering, PCB design" />
    <meta name="author" content="SimC Team" />
    
    <!-- Color Theme -->
    <meta name="theme-color" content="#00D9FF" />
    <meta name="msapplication-TileColor" content="#00D9FF" />
    
    <!-- Mobile App Tags -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    
    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    
    <!-- GSAP CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/TextPlugin.min.js"></script>
    
    <!-- Feather Icons -->
    <script src="https://unpkg.com/feather-icons"></script>
    </head>
    <body class="bg-dark-bg dark:bg-dark-bg bg-light-bg text-text-primary dark:text-text-primary text-text-primary-light overflow-x-hidden transition-colors duration-300">
    <slot />
    
    <script>
      // Initialize Feather Icons
      feather.replace();
      
      // Register GSAP plugins
      gsap.registerPlugin(ScrollTrigger, TextPlugin);
    </script>
  </body>
</html>
